<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:background="@drawable/bg_icon_circle_green"
        android:src="@drawable/ic_paw"
        app:tint="#14B66A" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAnimalType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dog"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCaseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case #123"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvCompletionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed: Jan 1, 2026"
            android:textColor="#666666"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_status_green"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="Closed"
        android:textColor="#14B66A"
        android:textSize="11sp" />

</LinearLayout>
